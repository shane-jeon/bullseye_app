<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bullseye" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_accent</item>
        <item name="colorPrimaryVariant">@color/red_accent</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

<!--    Splash Screen Theme-->
    <style name="Theme.CustomSplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.Bullseye.NoActionBar.FullScreen</item>
    </style>

    <style name="Theme.Bullseye.NoActionBar.FullScreen" parent="@style/Theme.Bullseye">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="game_stats_text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="instruction_text">
        <item name="android:letterSpacing">0.2</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="big_text">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="about_bullseye_text">
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">15sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
</resources>